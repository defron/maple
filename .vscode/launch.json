    "version": "0.2.0",
    "configurations": [
        {
            "name": "Hot-Reload: Litestar app",
            "type": "debugpy",
            "cwd": "${workspaceFolder}/src",
            "request": "launch",
            "module": "litestar",
            "justMyCode": true,
            "args": ["--app", "app.maple:Maple", "run", "--reload", "--debug"],
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Python: Litestar app",
            "type": "debugpy",
            "request": "launch",
            "module": "litestar",
            "justMyCode": true,
            "args": ["--app-dir", "./src", "run", "--debug"],
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}